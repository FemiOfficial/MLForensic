<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alayesanmifemi.mlforensic.Profile_Activity"
    tools:showIn="@layout/activity_profile">

    <LinearLayout
        android:id="@+id/linearlayout_pic"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:padding="15dp"
        android:orientation="vertical"
        android:background="@color/navigationbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="300dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_arrow_back_black_24dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_settings_black_24dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="23dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/circlebackgroundnone"
            android:src="@drawable/profile_pic"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:textColor="@color/cardBackground"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Edit Photo" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout_pic"
        android:paddingRight="30dp"
        android:paddingLeft="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/profile_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:editable="false"
                android:hint="  Alan"
                android:textColor="@color/blackText"
                android:textColorHint="@color/blackText"
                android:textSize="15dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/profile_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Albert"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:textColor="@color/blackText"
                android:textColorHint="@color/blackText"
                android:textStyle="normal"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                />
            <EditText
                android:id="@+id/profile_agency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Forensic Expert"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:textColor="@color/blackText"
                android:textColorHint="@color/blackText"
                android:textStyle="normal"
                android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                />
            <!--<EditText-->
                <!--android:id="@+id/profile_state"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="  Kogi State"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:textSize="15dp"-->
                <!--android:textColor="@color/blackText"-->
                <!--android:textColorHint="@color/blackText"-->
                <!--android:textStyle="normal"-->
                <!--android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"-->
                <!--/>-->
            <EditText
                android:id="@+id/profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Nigeria"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:textColor="@color/blackText"
                android:textColorHint="@color/blackText"
                android:textStyle="normal"
                android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"
                />
            <EditText
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  alana.albert@gmail.com"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:textColor="@color/blackText"
                android:textColorHint="@color/blackText"
                android:textStyle="normal"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                />

        </LinearLayout>



    </ScrollView>


</RelativeLayout>
